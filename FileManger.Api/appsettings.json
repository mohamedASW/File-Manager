{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=FileManagerDb;Trusted_Connection=True;MultipleActiveResultSets=true;"

  },
  "FileSettings": {
    "MaxFileSize": 10485760, // 10MB
    "AllowedImageExtensions": [ ".jpg", ".jpeg", ".png", ".gif"],
    "BlockedFileExtensions": [ ".js", ".exe", ".msi" ],
    "BlockedMimeTypes": [
      "application/x-msdownload", // .exe
      "application/x-msinstaller", // .msi
      "application/javascript", // .js
      "text/javascript", // .js (بعض المتصفحات)
      "application/x-sh", // shell script
      "application/x-bat", // .bat
      "application/x-cmd", // .cmd
      "application/vnd.microsoft.portable-executable",
      "application/x-msi",
      "text/plain"
    ]
  }
}
